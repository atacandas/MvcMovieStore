
@model MvcProjeMovieStore.Models.ViewModels.ListEmployeesViewModel

@{
    ViewBag.Title = "ListMyEmployees";
}

<h2>ListMyEmployees</h2>
<hr />

<table class="table table-responsive">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>User Name</th>
            <th>Password</th>
            <th>Title Name</th>
            <th colspan="3">@Html.ActionLink("Add Employee","AddMyEmployee",null,new { @class = "btn btn-default btn-block"})</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Employees)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.UserName</td>
                <td>@item.Password</td>
                <td>@(item.TitleId == null ? "No Title": item.Title.Name)</td>
                <td>@Html.ActionLink("Detail","DetailMyEmployee",new { id = item.EmployeeID}, new { @class = "btn btn-xs btn-block btn-success"})</td>
                <td>@Html.ActionLink("Update","UpdateMyEmployee",new { id = item.EmployeeID}, new { @class = "btn btn-xs btn-block btn-primary"})</td>
                <td>@Html.ActionLink("Delete","DeleteMyEmployee",new { id = item.EmployeeID}, new { @class = "btn btn-xs btn-block btn-danger"})</td>
            </tr>
        }
    </tbody>
</table>
